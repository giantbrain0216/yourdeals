
@page "/MobileChangeYourPassword"
@inject ShellNavigationManager navman
<ContentPage Title="Email Confirmation">
    <StackLayout>
        <BlazorWebView VerticalOptions="XF.LayoutOptions.FillAndExpand">
            <NPComplet.YourDeals.Client.Shared.WebUI.Pages.Login.ChangeYourPassword  OnChangedPassword="showNotification" BackToLogin="gotToLogin" />
        </BlazorWebView>
    </StackLayout>
</ContentPage>

@code {

    async void showNotification(Result<AuthResponseDto> isChanged)
    {
        StateHasChanged();
        if (isChanged.Succeeded)
            await navman.NavigateToAsync("/MobileLogin");
    }
    async void gotToLogin()
    {

        StateHasChanged();
        await XF.Shell.Current.GoToAsync("..");

    }

}